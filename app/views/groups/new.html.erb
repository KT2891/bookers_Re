<div class="container">
  <div class="row">
    <div class="my-3 mx-auto">
      <h2>Create Group</h2>
      <%= render "layouts/errors", content: @group %>
      <%= form_with model: @group do |f| %>
        <div class="form-group">
          <label for="group-name">グループ名</label>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="group-introduction">紹介文</label>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="group-image">グループ画像</label>
          <%= f.file_field :group_image, accept: "image/*", class: "form-control-file" %>
        </div>
          <%= f.hidden_field :owner_id, value: current_user.id %>
        <%= f.submit "Create Group", class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>