<h2 class="mt-3">New book</h2>
<%= form_with model: book do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field :title, class: "book_title form-control" %>
  </div>
  <div class="form-group">
    <label for="book_body">Opinion</label>
    <%= f.text_area :body ,class: "book_body form-control" %>
  </div>

  <%= fields_for BookTag.new do |b| %>
    <div class="form-group">
        <label for="book_tag">Tag</label>
        <%= b.text_field :tag, class: "book_tag form-control" %>
    </div>
  <% end %>

  <div class="from-group my-2">
    <div id="post_raty"></div>
    <script>
      // scriptファイルをどのidの部分に配置するかを指定
      let elem = document.querySelector('#post_raty');
      let opt = {
        starOn: "<%= asset_path('star-on.png') %>",
        starOff: "<%= asset_path('star-off.png') %>",
        starHalf: false,
        scoreName: 'book[star]',
      };
      raty(elem,opt);
    </script>
  </div>
  <div class="form-group">
    <%= f.submit "Create Book", class: "btn btn-success" %>
  </div>
<% end %>