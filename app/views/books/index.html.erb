<div class="container px-5 px-sm-0">
  <%= render "layouts/errors", content: @book %>
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info", user: current_user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th><%= link_to sort_goods_path, remote: true do %><span class="fas fa-heart text-danger"></span><% end %></th>
          <th><%= link_to "Comments", sort_comments_path, remote: true %></th>
          <th><%= link_to "Stars", sort_stars_path, remote: true %></th>
          <th><%= link_to "Visits", sort_visits_path, remote: true %></th>
        </tr>
        <tbody id="book_table">
          <% @books.each do |book| %>
          <tr>
            <%= render "books/info", book: book %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>