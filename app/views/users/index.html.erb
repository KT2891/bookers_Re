<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info", user: current_user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <div class="group-links my-2">
        <%= link_to "グループを作成する", new_group_path %>
        |
        <%= link_to "グループ一覧", groups_path %>
      </div>
      <table class="table">
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan=4></th>
        </tr>
        <% @users.each do |user| %>
          <%= render "users/show", user: user %>
        <% end %>
      </table>
    </div>
  </div>
</div>